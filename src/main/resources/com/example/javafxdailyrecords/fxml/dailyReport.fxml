<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.control.cell.PropertyValueFactory?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<!-- 核心容器：仅使用标准TabPane标签 -->
<TabPane tabClosingPolicy="UNAVAILABLE"
         xmlns="http://javafx.com/javafx/25"
         xmlns:fx="http://javafx.com/fxml/1"
         fx:controller="com.example.javafxdailyrecords.controller.DailyReportController"
         style="-fx-background-color: #f8f9fa; -fx-padding: 10px;">

    <tabs>
        <!-- 日报Tab：仅用标准Tab标签 + 内联style -->
        <Tab text="day"
             style="-fx-font-family: 'Microsoft YaHei'; -fx-font-size: 14px; -fx-font-weight: bold; -fx-padding: 8px 20px;">

            <content>
                <!-- 外层VBox：标准标签 + 内联样式 -->
                <VBox spacing="15" VBox.vgrow="ALWAYS"
                      style="-fx-background-color: white;
                             -fx-background-radius: 8px;
                             -fx-effect: dropshadow(gaussian, #e0e0e0, 5, 0, 0, 2);
                             -fx-padding: 20px;">

                    <!-- 顶部操作栏：标准HBox + Button -->
                    <HBox alignment="CENTER_LEFT" spacing="15">
                        <Button fx:id="addReportBtn"
                                text="新增"
                                style="-fx-background-color: #409eff;
                                       -fx-text-fill: white;
                                       -fx-font-family: 'Microsoft YaHei';
                                       -fx-font-size: 14px;
                                       -fx-background-radius: 6px;
                                       -fx-padding: 8px 20px;
                                       -fx-cursor: hand;
                                       -fx-border-width: 0;">
                            <font>
                                <Font name="Microsoft YaHei" size="14"/>
                            </font>
                        </Button>

                        <!-- 占位Region：标准标签 -->
                        <Region HBox.hgrow="ALWAYS"/>
                    </HBox>

                    <!-- 分隔线：标准Separator -->
                    <Separator style="-fx-background-color: #e6e6e6;"/>

                    <!-- 日报列表：标准TableView + 内联样式 -->
                    <TableView fx:id="dailyReportTable" VBox.vgrow="ALWAYS"
                               style="-fx-background-color: white;
                                      -fx-border-color: #e6e6e6;
                                      -fx-border-width: 1px;
                                      -fx-border-radius: 6px;
                                      -fx-font-family: 'Microsoft YaHei';
                                      -fx-font-size: 13px;">

                        <!-- 表格列：仅用标准TableColumn + style属性 -->
                        <columns>
                            <!-- 序号列：样式直接写在列的style中 -->
                            <TableColumn fx:id="indexColumn" prefWidth="60" text="序号" sortable="false"
                                         style="-fx-alignment: CENTER;
                                                -fx-font-family: 'Microsoft YaHei';
                                                -fx-font-size: 13px;
                                                -fx-background-color: #eef2f7;
                                                -fx-text-fill: #303133;
                                                -fx-font-weight: bold;">
                            </TableColumn>

                            <!-- 日期列：标准配置 + 内联样式 -->
                            <TableColumn fx:id="dateColumn" prefWidth="120" text="日期" sortable="true"
                                         style="-fx-alignment: CENTER;
                                                -fx-font-family: 'Microsoft YaHei';
                                                -fx-font-size: 13px;
                                                -fx-background-color: #eef2f7;
                                                -fx-text-fill: #303133;
                                                -fx-font-weight: bold;">
                                <cellValueFactory>
                                    <PropertyValueFactory property="reportDate"/>
                                </cellValueFactory>
                            </TableColumn>

                            <TableColumn fx:id="weekColumn" prefWidth="60" text="星期" sortable="false">
                                <cellValueFactory>
                                    <PropertyValueFactory property="week"/>
                                </cellValueFactory>
                            </TableColumn>

                            <!-- 内容列：标准配置 + 内联样式 -->
                            <TableColumn fx:id="contentColumn" prefWidth="300" text="工作内容" sortable="false">
                                <cellValueFactory>
                                    <PropertyValueFactory property="content"/>
                                </cellValueFactory>
                            </TableColumn>

                            <!-- 备注列：标准配置 + 内联样式 -->
                            <TableColumn fx:id="remarkColumn" prefWidth="150" text="备注" sortable="false"
                                         style="-fx-alignment: CENTER;
                                                -fx-font-family: 'Microsoft YaHei';
                                                -fx-font-size: 13px;
                                                -fx-background-color: #eef2f7;
                                                -fx-text-fill: #303133;
                                                -fx-font-weight: bold;">
                                <cellValueFactory>
                                    <PropertyValueFactory property="remark"/>
                                </cellValueFactory>
                            </TableColumn>

                            <!-- 操作列：标准配置 + 内联样式 -->
                            <TableColumn fx:id="actionColumn" prefWidth="140" text="操作" sortable="false"
                                         style="-fx-alignment: CENTER;
                                                -fx-font-family: 'Microsoft YaHei';
                                                -fx-font-size: 13px;
                                                -fx-background-color: #eef2f7;
                                                -fx-text-fill: #303133;
                                                -fx-font-weight: bold;">
                            </TableColumn>
                        </columns>

                        <!-- 列自适应：标准常量 -->
                        <columnResizePolicy>
                            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY_ALL_COLUMNS"/>
                        </columnResizePolicy>
                    </TableView>

                    <!-- 分页控件栏 -->
                    <HBox spacing="10" alignment="CENTER_RIGHT"
                          style="-fx-padding: 10px 0 0 0; -fx-font-family: 'Microsoft YaHei';">
                        <!-- 上一页按钮 -->
                        <Button fx:id="prevPageBtn" text="上一页"
                                style="-fx-background-color: #409eff; -fx-text-fill: white; -fx-font-size: 13px; -fx-padding: 5px 15px; -fx-background-radius: 4px;"/>

                        <!-- 页码输入 -->
                        <Label text="第" style="-fx-font-size: 13px;"/>
                        <TextField fx:id="pageNumField" prefWidth="50"
                                   style="-fx-font-size: 13px; -fx-alignment: CENTER;"
                                   text="1"/>
                        <Label text="页 / 共" style="-fx-font-size: 13px;"/>
                        <Label fx:id="totalPageLabel" text="0" style="-fx-font-size: 13px;"/>
                        <Label text="页" style="-fx-font-size: 13px;"/>

                        <!-- 下一页按钮 -->
                        <Button fx:id="nextPageBtn" text="下一页"
                                style="-fx-background-color: #409eff; -fx-text-fill: white; -fx-font-size: 13px; -fx-padding: 5px 15px; -fx-background-radius: 4px;"/>

                        <!-- 总记录数展示 -->
                        <Region HBox.hgrow="ALWAYS"/>
                        <Label fx:id="totalCountLabel" text="总记录数：0条" style="-fx-font-size: 13px;"/>
                    </HBox>

                </VBox>
            </content>
        </Tab>

        <!-- 周报Tab：标准标签 + 内联样式 -->
        <Tab text="week"
             style="-fx-font-family: 'Microsoft YaHei'; -fx-font-size: 14px; -fx-font-weight: bold; -fx-padding: 8px 20px;">

            <content>
                <VBox spacing="15" VBox.vgrow="ALWAYS"
                      style="-fx-background-color: white;
                             -fx-background-radius: 8px;
                             -fx-effect: dropshadow(gaussian, #e0e0e0, 5, 0, 0, 2);
                             -fx-padding: 20px;">

                    <Button fx:id="generateWeekBtn"
                            text="generate week report"
                            style="-fx-background-color: #67c23a;
                                   -fx-text-fill: white;
                                   -fx-font-family: 'Microsoft YaHei';
                                   -fx-font-size: 14px;
                                   -fx-background-radius: 6px;
                                   -fx-padding: 8px 20px;
                                   -fx-cursor: hand;
                                   -fx-border-width: 0;">
                        <font>
                            <Font name="Microsoft YaHei" size="14"/>
                        </font>
                    </Button>

                    <Separator style="-fx-background-color: #e6e6e6;"/>

                    <TextArea fx:id="weeklyReportArea" editable="false" VBox.vgrow="ALWAYS"
                              style="-fx-background-color: white;
                                     -fx-border-color: #e6e6e6;
                                     -fx-border-width: 1px;
                                     -fx-border-radius: 6px;
                                     -fx-font-family: 'Microsoft YaHei';
                                     -fx-font-size: 13px;
                                     -fx-padding: 10px;">
                        <font>
                            <Font name="Microsoft YaHei" size="13"/>
                        </font>
                    </TextArea>
                </VBox>
            </content>
        </Tab>
    </tabs>
</TabPane>